      <url>https://oss.sonatype.org/content/groups/public/</url>
    </repository>
    <repository>
      <id>enginehub</id>
      <url>https://maven.enginehub.org/repo/</url>
    </repository>
    <repository>
      <id>plotsquared</id>
      <url>https://plotsquared.com/mvn/</url>
    </repository>
    <repository>
      <id>jitpack.io</id>
